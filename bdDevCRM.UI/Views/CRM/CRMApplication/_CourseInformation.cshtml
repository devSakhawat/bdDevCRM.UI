				<div class="d-flex align-items-start icon-wrapper">
					<input id="cmbCountryForAddress" name="CountryForPresentAddress" class="flex-grow-1 border-right-strait" />
					<button type="button" class="btn btn-outline-dark add-new-ddl-item-btn" onclick="CRMCourseInformationHelper.generateCountryForAddressPopUp();">
						<span class="k-icon k-i-plus"></span>
					</button>
				</div>
			</div>

			<!-- Pin/Zip/Postal Code -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
				<label for="PostalCode" class="lbl widthSize100_per">Pin/Zip/Postal Code</label>
				<div class="">
