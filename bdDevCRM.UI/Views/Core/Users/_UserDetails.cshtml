<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-sm-12">
  <fieldset class="border p-3 fieldsetCommon">
    <legend class="legendCommon">User Form</legend>
    <div id="tabstrip">
      <ul>
        <li>
          User Info
        </li>
        <li>
          Group Membership
        </li>
      </ul>
      <div>
        <partial name="Users/_UserInfo" />
      </div>
      <div>
        <partial name="Users/_GroupMembership" />
      </div>

    </div>

    <!-- Buttons -->
    <div class="btnDiv mt-2" data-fixed-footer>
      <ul>
        <li class="d-flex justify-content-end">
          <button type="button" class="btn btn-primary me-2" id="btnUserSaveOrUpdate" onclick="User.saveOrUpdate();">+ Add Menu</button>
