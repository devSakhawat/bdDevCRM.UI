				<div class="d-flex align-items-start icon-wrapper">
					<input id="cmbCountryForCourse" name="CountryForCourse" required validationMessage="Please Select Country" class="w-100" />
					<button type="button" class="btn btn-outline-dark add-new-ddl-item-btn" onclick="CRMCourseInformationHelper.generateCountryPopUp();">
						<span class="k-icon k-i-plus"></span>
					</button>
				</div>
			</div>


			<!-- Institute with Add Icon -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
				<label for="Institute" class="lbl widthSize100_per">Institute</label>
				<!-- icon-wrapper class for add-new-ddl-item-btn -->
				<div class="d-flex align-items-start icon-wrapper">
					<input id="cmbInstituteForCourse" name="Institute" required validationMessage="Please Select Institute" class="flex-grow-1 border-right-strait" />
					<button type="button" class="btn btn-outline-dark add-new-ddl-item-btn" onclick="CRMCourseInformationHelper.generateInistitutePopUp();">
						<span class="k-icon k-i-plus"></span>
					</button>
				</div>
			</div>

			<!-- Course with Add Icon -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
				<label for="Course" class="lbl widthSize100_per">Course</label>
				<!-- icon-wrapper class for add-new-ddl-item-btn -->
				<div class="d-flex align-items-start icon-wrapper">
					<input id="cmbCourseForCourse" name="Institute" required validationMessage="Please Select Course" class="flex-grow-1 border-right-strait" />
					<button type="button" class="btn btn-outline-dark add-new-ddl-item-btn" onclick="CRMCourseInformationHelper.generateCoursePopUp();">
						<span class="k-icon k-i-plus"></span>
					</button>
				</div>
			</div>


			<!-- Intake Month -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
				<label for="IntakeMonth" class="lbl widthSize100_per">Intake Month</label>				
				<!-- icon-wrapper class for add-new-ddl-item-btn -->
				<div class="d-flex align-items-start icon-wrapper">
					<input id="cmbIntakeMonthForCourse" name="IntakeMonth" required validationMessage="Please Select Intake Month" class="flex-grow-1 border-right-strait" />
					<button type="button" class="btn btn-outline-dark add-new-ddl-item-btn" onclick="CRMCourseInformationHelper.generateCoursePopUp();">
						<span class="k-icon k-i-preview"></span>
					</button>
				</div>
			</div>


			<!-- Intake Year  -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
				<label for="IntakeYear" class="lbl widthSize100_per">Intake Year</label>
				<!-- icon-wrapper class for add-new-ddl-item-btn -->
				<div class="">
					<input id="cmbIntakeYearForCourse" name="IntakeYear" required validationMessage="Please Select Intake Year" class="w-100" />
				</div>
			</div>


			<!-- Application Fee -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
				<label for="ApplicationFee" class="lbl widthSize100_per">Application Fee (if applicable)</label>
				<!-- icon-wrapper class for add-new-ddl-item-btn -->
				<div class="">
					<input type="text" id="txtApplicationFeeForCourse" name="ApplicationFee" required validationMessage="Please Select Application Fee" class="w-100" />
				</div>
			</div>


			<!-- Currency -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
				<label for="Currency" class="lbl widthSize100_per">Currency</label>
				<!-- icon-wrapper class for add-new-ddl-item-btn -->
				<div class="">
					<input id="cmbCurrencyForCourse" name="Currency" required validationMessage="Please Select Currency" class="w-100" />
				</div>
			</div>


			<!-- Payment Method -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
				<label for="PaymentMethod" class="lbl widthSize100_per">Payment Method</label>
				<!-- icon-wrapper class for add-new-ddl-item-btn -->
				<div class="">
					<input id="cmbPaymentMethodForCourse" name="PaymentMethod" required validationMessage="Please Select Payment Method" class="w-100" />
				</div>
			</div>


			<!-- Payment Reference Number -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
				<label for="PaymentReferenceNumber" class="lbl widthSize100_per">Payment Reference Number</label>
				<!-- icon-wrapper class for add-new-ddl-item-btn -->
				<div class="">
					<input type="text" id="txtPaymentReferenceNumberCourse" name="PaymentReferenceNumber" validationMessage="Please Select Payment Reference Number" class="w-100" />
				</div>
			</div>


			<!-- Payment Date -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
				<label for="PaymentDate" class="lbl widthSize100_per">Payment Date</label>
				<!-- icon-wrapper class for add-new-ddl-item-btn -->
				<div class="">
					<input id="datePickerPaymentDate" name="PaymentDate" class="w-100" />
				</div>
			</div>


			<!-- Remarks -->
			<div class="col-12 mb-2">
				<label for="Remarks" class="lbl widthSize100_per">Remarks</label>
				<!-- icon-wrapper class for add-new-ddl-item-btn -->
				<div class="">
					<textarea id="txtareaRemarks" name="Remarks" class="w-100" rows="4"></textarea>
				</div>
			</div>

		</div>
	</fieldset>
	
	<!-- Personal Details -->
	<fieldset class="reset">
		<legend class="reset">Personal Details</legend>
		<div class="row">
			<!-- Hidden Fields -->
			<!-- Gender -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
				<label for="Gender" class="lbl widthSize100_per">Gender <span class="redstart">*</span> </label>
				<div class="">
					<input id="cmbGenderForCourse" name="Gender" required validationMessage="Please Select Gender" class="w-100" />
				</div>
			</div>

			<!-- Title -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
				<label for="Title" class="lbl widthSize100_per">Title <span class="redstart">*</span> </label>
				<div class="">
					<input id="cmbTitleForCourse" name="Gender" required validationMessage="Title" class="w-100" />
				</div>
			</div>

			<!-- First Name -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
