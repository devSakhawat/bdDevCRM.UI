			<div class="col-xl-12 col-lg-12 col-md-6 col-12 mb-2 custom-checkbox">
				<label for="DoPermanentAddress" class="form-check-label">Same as Permanent Address:</label>
				<div class="">
					<input type="checkbox" id="chkDoPermanentAddress" name="DoPermanentAddress" class="form-check-input" />
				</div>
			</div>

			<div class="col-xl-6 col-lg-6 col-md-6 col-12 mb-2">
				<label for="PresentAddress" class="lbl widthSize100_per"> Present Address</label>
				<div class="">
					<input id="txtPresentAddress" name="PresentAddress" placeholder="Present Address" class="w-100" />
				</div>
			</div>

			<!-- Present City -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
				<label for="PresentCity" class="lbl widthSize100_per">City</label>
				<div class="">
					<input id="txtPresentCity" name="PresentCity" placeholder="Present City" class="w-100" />
				</div>
			</div>

			<!-- Present State -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
				<label for="PresentState" class="lbl widthSize100_per">State</label>
				<div class="">
					<input id="txtPresentState" name="PresentState" placeholder="Present State" class="w-100" />
				</div>
			</div>

			<!-- Present Country with Add Icon -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
				<label for="CountryForPresentAddress" class="lbl widthSize100_per">Country <span class="redstart">*</span> </label>
