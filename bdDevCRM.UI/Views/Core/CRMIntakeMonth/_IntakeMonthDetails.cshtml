<script src="~/assets/scripts/core/crmintakemonth/intakemonthdetails.js"></script>

<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-sm-12">
  <fieldset class="border p-3 fieldsetCommon">
    <legend class="legendCommon legendCommonModalBGImportant">Intake Month Form</legend>
    <form id="IntakeMonthForm">
      <div class="row mb-2">
        <input id="intakeMonthId" name="IntakeMonthId" type="hidden" value="0" />

        <!-- Month Name -->
        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 mb-2">
          <label for="MonthName">Month Name <span class="redstart">*</span></label>
          <input type="text" class="form-control" id="monthName" name="MonthName" required />
        </div>

        <!-- Month Code -->
        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 mb-2">
          <label for="MonthCode">Month Code</label>
          <input type="text" class="form-control" id="monthCode" name="MonthCode" maxlength="10" />
        </div>

        <!-- Month Number -->
        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 mb-2">
          <label for="MonthNumber">Month Number <span class="redstart">*</span></label>
          <input type="number" class="form-control" id="monthNumber" name="MonthNumber" min="1" max="12" required />
        </div>

        <!-- Status Checkbox -->
        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 mb-2 custom-checkbox">
          <label class="form-check-label" for="IsActive">Active Status</label>
          <input type="checkbox" id="chkIsActiveIntakeMonth" name="IsActive" class="form-check-input" />
        </div>

        <!-- Description -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 mb-2">
          <label for="Description">Description</label>
          <textarea class="form-control" id="description" name="Description" rows="3" maxlength="500" placeholder="Enter description (optional)"></textarea>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="btnDiv mt-2">
        <ul>
          <li class="d-flex justify-content-end">
            <button type="button" class="btn btn-primary me-2" id="btnIntakeMonthSaveOrUpdate" onclick="IntakeMonthDetailsManager.saveOrUpdateItem();"> + Add Intake Month </button>
            <button type="button" class="btn btn-secondary me-2" onclick="IntakeMonthDetailsHelper.clearForm();"> Clear </button>
          </li>
        </ul>
      </div>
    </form>
  
  </fieldset>
</div> 