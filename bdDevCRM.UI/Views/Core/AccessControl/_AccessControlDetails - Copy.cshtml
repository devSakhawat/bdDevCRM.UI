<script src="~/assets/scripts/modules/core/accesscontrol/accesscontroldetails.js"></script>


<fieldset class="border p-3 fieldsetCommon">
  <legend class="legendCommon">Access Control Form</legend>

  <form id="accessControlForm" class="main-form mt-3">
    <input type="hidden" id="hdnAccessControlId" value="0" />

    <div class="mb-3">
      <label class="form-label" for="accessControl-name">Access Name:<span class="redstart">*</span></label>
      <input type="text" id="txtAccessControlName" name="accessControl-name" class="form-control" maxlength="50"
             placeholder="Access Control name" required validationmessage="Please enter Access Control Name" />
    </div>

    <div class="d-flex justify-content-end">
      <button type="button" class="btn btn-primary me-2" onclick="AccessControlDetailsManager.saveOrUpdateItem()" id="btnSave">+ Add New</button>
      <button type="button" class="btn btn-secondary me-2" onclick="AccessControlDetailsHelper.clearForm()" id="btnClear">Clear</button>
    </div>

    @* <div class="status"></div> *@
  </form>

</fieldset>