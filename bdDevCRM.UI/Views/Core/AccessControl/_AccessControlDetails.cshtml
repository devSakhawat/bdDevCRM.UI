@* <script src="~/assets/scripts/modules/core/accesscontrol/accesscontroldetails.js"></script> *@


<fieldset class="border p-3 fieldsetCommon">
  <legend class="legendCommon">Access Control Form</legend>

  <form id="accessControlForm" class="main-form mt-3">

    <input type="hidden" name="AccessId" id="hdnAccessControlId" value="0" data-type="int" />
    <div class="mb-3">
      <label class="form-label" for="AccessName">Access Name:<span class="redstart">*</span></label>
      <input type="text" id="txtAccessControlName" name="AccessName" class="form-control" maxlength="50"
             placeholder="Access Control name" required validationmessage="Please enter Access Control Name" data-type="string" />
    </div>

    <!-- Buttons -->
    <div class="btnDiv mt-2">
      <ul>
        <li class="d-flex justify-content-end">
          <button type="button" class="btn btn-primary me-2"
                  id="btnAccessControlSaveOrUpdate"
                  onclick="AccessControl.saveOrUpdate();">
            + Add Access Control
          </button>

          <button type="button" id="btnClear" class="btn btn-secondary me-2"
                  onclick="AccessControl.clearForm();">
            Clear
          </button>
        </li>
      </ul>
    </div>
  </form>

</fieldset>