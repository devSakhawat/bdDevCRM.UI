			</div>

			<!-- Date of Birth -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
				<label for="DateOfBirth" class="lbl widthSize100_per">Date of Birth <span class="redstart">*</span> </label>
				<div class="">
					<input id="datePickerDateOfBirth" name="DateOfBirth" class="w-100" />
				</div>
			</div>

			<!-- Marital Status with Add Icon -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
				<label for="cmbMaritalStatusForCourse" class="lbl widthSize100_per">Marital Status <span class="redstart">*</span> </label>
				<!-- icon-wrapper class for add-new-ddl-item-btn -->
				<div class="d-flex align-items-start icon-wrapper">
					<input id="cmbMaritalStatusForCourse" name="MaritalStatus" required validationMessage="Marital Status" class="flex-grow-1 border-right-strait" />
					<button type="button" class="btn btn-outline-dark add-new-ddl-item-btn" onclick="CRMCourseInformationHelper.generateCountryPopUp();">
						<span class="k-icon k-i-plus"></span>
					</button>
				</div>
			</div>

			<!-- Nationality -->
			<div class="col-xl-6 col-lg-6 col-md-6 col-12 mb-2">
				<label for="Nationality" class="lbl widthSize100_per">Nationality <span class="redstart">*</span> </label>
				<div class="">
					<input id="txtNationality" name="Nationality" validationMessage="Nationality" class="w-100" />
				</div>
			</div>


			<!-- valid passport -->
			<div class="col-xl-6 col-lg-6 col-md-6 col-12 mb-2 custom-checkbox">
				<span class="me-5">Do you have a valid passport</span>

				<input id="radioIsPassportYes" name="validPassport" type="radio" class="form-check-input inputRadio" />
				<label class="lbl">Yes</label>

				<input id="radioIsPassportNo" name="validPassport" type="radio" class="form-check-input inputRadio" />
				<label class="lbl">No</label>
			</div>

			<!-- Passport Number -->
			<div class="col-xl-6 col-lg-6 col-md-6 col-12 mb-2">
				<label for="PassportNumber" class="lbl widthSize100_per">Passport Number</label>
				<div class="">
					<input type="text" id="txtPassportNumberForCourse" name="PassportNumber" class="w-100" />
				</div>
			</div>

			<!-- Phone Country code -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
				<label for="PhoneCountrycode" class="lbl widthSize100_per">Phone Country code</label>
				<div class="">
					<input type="text" id="txtPhoneCountrycodeForCourse" name="PhoneCountrycode" placeholder="Phone Country code" class="w-100" />
				</div>
			</div>

			<!-- Phone Area code -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
				<label for="PhoneAreacode" class="lbl widthSize100_per">Phone Area code</label>
				<div class="">
					<input type="text" id="txtPhoneAreacodeForCourse" name="PhoneAreacode" placeholder="Phone Area code" class="w-100" />
				</div>
			</div>

			<!-- Phone Number -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
				<label for="Phone Number" class="lbl widthSize100_per">Phone Number</label>
				<div class="">
					<input type="text" id="txtPhoneNumberForCourse" name="Phone Number" placeholder="Phone Number" class="w-100" />
				</div>
			</div>

			<!-- Mobile -->
			<div class="col-xl-3 col-lg-3 col-md-6 col-12 mb-2">
				<label for="Phone Number" class="lbl widthSize100_per">Mobile</label>
				<div class="">
					<input type="text" id="txtMobileForCourse" name="Phone Number" placeholder="Mobile Number" class="w-100" />
				</div>
			</div>

			<!-- Email Address -->
			<div class="col-xl-6 col-lg-6 col-md-6 col-12 mb-2">
				<label for="Phone Number" class="lbl widthSize100_per">Email Address</label>
				<div class="">
					<input type="email" id="txtEmailAddressForCourse" name="Phone Number" placeholder="Email Address Number" class="w-100" />
				</div>
			</div>

			<!-- Email hints -->
			<div class="col-xl-6 col-lg-6 col-md-6 col-12 mb-2">

			</div>

			<!-- Skype ID -->
			<div class="col-xl-6 col-lg-6 col-md-6 col-12 mb-2">
				<label for="SkypeID" class="lbl widthSize100_per">Skype ID</label>
				<div class="">
					<input type="text" id="txtSkypeIDForCourse" name="SkypeID" placeholder="Skype ID" class="w-100" />
				</div>
			</div>

			<!-- Applicant Image -->
			<div class="col-xl-6 col-lg-6 col-md-6 col-12 mb-2">
				<label for="ApplicantImage" class="lbl widthSize100_per">Applicant Image</label>
				<div class="">
					<input type="text" id="txtApplicantImageForCourse" name="ApplicantImage" placeholder="Applicant Image" class="w-100" />
				</div>
			</div>

		</div>
	</fieldset>

	<!-- Address -->
	<fieldset class="reset">
		<legend class="reset">Applicant Address</legend>

		<div class="row mb-3">
			<h4 class="k-header mb-3" >Permanent Address</h4>
