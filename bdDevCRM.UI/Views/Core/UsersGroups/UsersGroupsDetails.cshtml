<script src="~/scripts/coremanagement/UsersGroups/UsersGroupsDetails.js"></script>


<div id="divdetailsForDetails" class="container divDetails">
    <fieldset class="reset">
        <legend class="reset">Group Details :</legend>

        <div id="tabstrip">
            <ul>
                <li class="k-state-active">
                    Group Details
                </li>
                <li>
                    Group Permission
                </li>
            </ul>
    
        <div class="row">
            <div class="col-md-6">
                <form>
                    <div class="form-group">
                        <input type="text" id="txtCode" name="Code" placeholder="Code*" class="k-textbox mendatory-field" />
                        <input type="hidden" id="hdnId" />
                        <input type="hidden" id="hdnCreateBy" />
                        <input type="hidden" id="hdnCreateDate" />
                        <input type="hidden" id="hdnUpdateBy" />
                        <input type="hidden" id="hdnUpdateDate" />
                             
                             
                    </div>
                    <div class="form-group">
                        <input type="text" id="txtName" name="Name" placeholder="Name*" class="k-textbox mendatory-field" />
                    </div>
                    <div class="form-group">
                        <input type="text" id="cmbStatus" name="Status" placeholder="Status" class="mendatory-field" />
                    </div>
                    <div class="form-group">
                        <input type="text" id="cmbDefaultGroup" name="DefaultGroup" placeholder="DefaultGroup" class="mendatory-field" />
                    </div>
                    <div class="form-group">
                        <input type="text" id="cmbUsertype" name="Usertype" placeholder="Usertype" class="mendatory-field" />
                    </div>
                    <div>
                        <label class="status"></label>
                    </div>
                   
               
                </form>
            </div>
           
        </div>
        <div>
            @Html.Partial("UsersGroups/UsersGroupsPermission")
        </div>

        </div>

    </fieldset>
    <div class="clear"></div>
    <fieldset>
        <button type="button" class="btn btn-primary btn-sm" id="btnSave" style="background-color: #207AB0;">Save</button>
        <button type="button" class="btn btn-secondary btn-sm" id="btnClose" style="background-color: #207AB0;">Close</button>
    </fieldset>

</div> 
