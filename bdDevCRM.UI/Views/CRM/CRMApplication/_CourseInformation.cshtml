</form>
	<!-- Course Details -->
	<fieldset class="reset">
		<legend class="reset">Course Details</legend>
		<div class="row">
			<!-- Hidden Fields -->
			<input type="hidden" id="hdnCountryId" value="0" />

			<!-- Country with Add Icon -->
