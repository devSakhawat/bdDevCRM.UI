

@* input field pattern type, id, class, name, validationmessage and others *@
<script src="~/assets/scripts/core/workflow/actiondetail.js"></script>


  <div class="row mb-2"> 
    <div class="">
      <div id="gridSummaryAction"></div>
    </div>
  </div>



<div class="row gy-2 gx-1">
  <div id="divActionDetails">

    <div class="divDetails">
      <ul>
        <li class="mb-2">
          <input type="hidden" id="actionID" value="0" />


          <label for="StateName" class="lbl widthSize100_per">State Name:<span class="redstart">*</span></label>
          <input id="txtStateName_Action" class="width_100_Per_Important k-textbox" name="StateName" validationMessage="Please input valid State Name" required="required" disabled="disabled" />
        </li>

        <li class="mb-2">
          <label for="ActionName" class="lbl widthSize100_per">Action Name:<span class="redstart">*</span></label>
          <input type="text" id="txtActionName" class="k-textbox width_100_Per_Important" name="ActionName" maxlength="50" pattern="[a-zA-Z0-9 ]+" validationMessage="Please input valid Action Name" required="required" />
        </li>

        <li class="mb-2">
          <label for="NextState" class="lbl widthSize100_per">Next State:<span class="redstart">*</span></label>
          <input id="cmbNextState" class="width_100_Per_Important" name="NextState" validationMessage="Please Select" required="required" />
        </li>

        <li class="mb-2">
          <label for="SortOrder" class="lbl widthSize100_per">Sort Order:<span class="redstart">*</span></label>
          <input type="number" id="numSortOrder" class="k-textbox width_100_Per_Important" name="SortOrder" validationmessage="Please Insert Sort Order" required="required" />
        </li>

        <li class="mb-2 custom-checkbox">
          <label for="IsEmail" class="lbl">Is Email:</label>
          <input type="checkbox" id="chkIsEmail" name="IsEmail" class="chkBox " />
        </li>

        <li class="mb-2 custom-checkbox">
          <label for="IsSms" class="lbl">Is SMS:</label>
          <input type="checkbox" id="chkIsSms" name="IsSms" class="chkBox" />
        </li>
      </ul>
    </div>

    <div class="btnDiv mt-2">
      <ul>
        <li class="d-flex justify-content-end">
          <button type="button" id="btnSaveOrUpdate" class="btn btn-primary me-2" onclick="ActionDetailsManager.saveOrUpdate()">+ Add Item</button>
          <button type="button" id="btnClear" class="btn btn-secondary me-2" onclick="ActionDetailHelper.clearActionForm()">Clear</button>
        </li>
      </ul>
    </div>
  </div>

</div>
